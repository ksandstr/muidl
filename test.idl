
// NOTE: this doesn't reflect any actual IPC interface in ÂµiX.

module Muix
{

typedef unsigned long threadid;
native word;


struct MapItem {
	word first;
	word second;
};

// from L4.X2
interface FaultHandler
{
	[TagMask(0xfff00000), Label(0xff40)]
	MapItem handle_fault(
		[MR(1)] in word faddr,
		[MR(2)] in word fip);
};


interface MemServ: FaultHandler
{
	typedef long pid_t;

	void create_space(in pid_t pid);
	void destroy_space(in pid_t pid);
};


};
